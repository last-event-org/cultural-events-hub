<details class="hover:bg-slate-100 ">
    
  <summary class="flex items-center duration-300">
      <div class="w-24 hidden sm:block">
          <img class=" object-cover overflow-hidden w-full h-16" src="{{event.path ?? '/images/dummies/No_image.png'}}" 
           alt="{{event.altName ?? 'No picture available'}}"
           onerror="this.onerror=null; this.src='/images/dummies/No_image.png';">
      </div>
      <div class=" w-1 min-h-16  bg-yellow-500"></div>
      <div class="flex px-4 tracking-tight w-full gap-4">
        <div class="flex flex-col w-2/6">
          <h3 class="font-semibold ">{{event.title}}</h3>
          <div class="formated-date text-xs text-gray-500/60 font-bold"
              data-event-start="{{ event.eventStart }}" data-event-end="{{ event.eventEnd }}">
          </div>
        </div>
        <div class="flex w-3/6 gap-4 text-center justify-between">
          <div class="sm:block">
            <p class="font-semibold">{{i18n.t('messages.dashboard_vendor_orders_tickets_sold')}}</p>
            <p class="text-xs text-gray-500/60 font-bold">{{event.total_qty}}</p>
          </div>
          <div class="sm:block">
              <p class="font-semibold">{{i18n.t('messages.dashboard_vendor_orders_total')}}</p>
              <p class=" text-xs text-gray-500/60 font-bold">{{event.total_amount}}<span> €</span></p>
          </div>
          <div class="sm:block">
            <p class="font-semibold">{{i18n.t('messages.dashboard_vendor_orders_tickets_available')}}</p>
            <p class="text-xs text-gray-500/60 font-bold">{{event.total_available_qty}}</p>
          </div>
        </div>
        
      </div>
  </summary>
  <div class="grid grid-cols-5 font-semibold tracking-tight border-t-4 border-t-yellow-500 text-center">
    <p>{{i18n.t('messages.dashboard_vendor_orders_ticket_type')}}</p>
    <p>{{i18n.t('messages.dashboard_vendor_orders_tickets_sold')}}</p>
    <p>{{i18n.t('messages.dashboard_vendor_orders_total')}}</p>
    <p>{{i18n.t('messages.dashboard_vendor_orders_number')}}</p>
    <p>{{i18n.t('messages.dashboard_vendor_orders_tickets_available')}}</p>
  </div>

  <div class="grid grid-cols-5 text-sm tracking-tight text-gray-500/60 font-bold gap-y-1 text-center">
    @each(orderLine in orderLines.order_lines)
      <p>
        {{orderLine.$extras.price_description}}
      </p>
      <p>
        {{orderLine.$extras.total_qty}}
      </p>
      <p>
        {{orderLine.$extras.total_amount}}
        <span> €</span>
      </p>
      <p>
        {{orderLine.$extras.order_lines_count}}
      </p>
      <p>
        {{orderLine.$extras.price_available_qty}}
      </p>
    @end
  </div>
</details>
 