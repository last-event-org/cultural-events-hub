<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Next Event: A cultural events hub</title>
  @vite(['resources/css/app.css', 'resources/js/app.js', 'resources/js/map_home.js'])
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
</head>

<body class=" bg-slate-50">
@include("pages/partials/header")
<div class="flex justify-center mt-12">
    <img src="/public/svg/logo-NE.svg" alt="Next Event logo">
    <h1 class="text-3xl md:text-3xl font-bold">xt Events - {{title}}</h1>
  </div>

<main class="py-10 mb-10 mx-auto">
{{-- events types --}}

<ul>
  <div class="flex flex-wrap justify-center items-center my-4 gap-4 mx-auto">
    @each(category in categories)
      <li>
          <div class="flex items-center gap-3 bg-slate-700 hover:bg-slate-500 rounded-md px-4 pb-1">
            <a class="font-semibold  text-white"href="/events/?category-type={{category.id}}">{{category.name}}</a>
          </div>
      </li>
    @end
    </div>
</ul>

  
<div class="flex flex-wrap justify-center px-2  gap-x-4 gap-y-4 sm:gap-y-16 lg:gap-y-12 2xl:gap-y-16 mb-20 ">   
     @each(event in events)
      @!component('components/events_cards', {event})
    @end
    </div>


</main>


@include("pages/partials/footer")  

</body>
</html>