      </div>
    </div> 
  </div> 
  {{-- map  --}}
  <div class="flex flex-col w-full h-full justify-center items-center p-4 z-10">
    <div id="map" class="h-80 w-full lg:w-4/5 border shadow "></div>
  </div>
</section>
  

{{-- events types --}}

<ul>
  <div class="flex flex-wrap justify-center mt-4 lg:mt-16 mb-8 gap-2 ">

    @each((category, index) in categories)   
    <div class="flex flex-col gap-2 w-36">  

      <a href="/events/?category={{ category.id }}">
        <div class=" flex  w-16 h-16 rounded-full shadow p-3 mx-auto bg-{{category.slug}}">
          <img src=/svg/categories/{{category.slug}}.svg
          alt="category icon" title="{{category.slug}}">
        </div>
      </a>

      <li>
        <div class="flex justify-center items-center gap-2 rounded-md px-4 pb-1">
          <a class=" text-xs font-semibold" href="/events/?category={{ category.id }}">{{ category.name }}</a>
        </div>
      </li>
    
    </div>
    @end
  </div>
</ul>
  
