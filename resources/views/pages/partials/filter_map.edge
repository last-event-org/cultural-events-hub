  {{-- Cities --}}
<section class="flex flex-col lg:flex-row justify-center lg:border-2 lg:p-10 mt-12 bg-slate-100 shadow-sm">
  <div class="flex flex-col justify-center">
    <ul>
      <div class="flex flex-wrap justify-center my-4 mx-2 sm:mx-12 lg:mx-2 gap-4  lg:w-full">
        @each (city in ["Bruxelles", "Liège","Charleroi", "Namur", "Mons", "Anvers","Gand","Ostende","Arlon","Marche-en-Famenne"])
        <li>
          <div class="flex items-center gap-3 bg-blue-600 hover:bg-blue-500 rounded-md px-0 py-0 border-2 border-blue-800">
            <div class="flex items-center gap-3 bg-blue-700 hover:bg-blue-500 border-2 border-white rounded-md px-4 pb-1">
              <a class="lg:text-xl font-semibold  text-white"href="#">{{city}}</a>
            </div>
          </div>
        </li>
        @end      
      </div>
    </ul>

  {{-- searchbar --}}
  
    <div class='my-8 mx-auto'>
      <div class="flex justify-between items-center w-80 h-10 rounded-lg shadow focus-within:shadow-lg bg-white overflow-hidden">
        <div class="flex px-4 justify-center items-center text-gray-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
